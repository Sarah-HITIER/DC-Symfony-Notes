{% extends 'base.html.twig' %}

{% block title %}Hello NoteController!
{% endblock %}

{% block body %}
	<h1>Notes</h1>

	<table class="table">
		<thead>
			<tr>
				<th>Note</th>
				<th>Matter</th>
				<th>Coeff</th>
				<th>Date</th>
			</tr>
		</thead>
		<tbody>
			{% for note in notes %}
				<tr>
					<td>{{ note.value }}</td>
					<td>{{ note.matter }}</td>
					<td>{{ note.value }}</td>
					<td>{{ note.date|date('d/m/Y') }}</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	<h2>{{'matter.add'|trans}}</h2>
	{{ form(add)}}
{% endblock %}
